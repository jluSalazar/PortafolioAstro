---
const { title, img,icon, desc, url, badge, tags, target = "_blank" } = Astro.props;
import { Image } from "astro:assets";
const tag_url = url.split("/").slice(0, -1).join("/") + "/tag";
import '@fortawesome/fontawesome-free/css/all.min.css';
---

<div
  class="rounded-lg bg-base-100 hover:shadow-xl transition ease-in-out hover:scale-[102%]"
>
  <a href={url} target={target}>
    <div class="hero-content flex-col md:flex-row">
      <!-- Render Image or Icon -->
      {img ? (
        <Image
          src={img}
          width={750}
          height={422}
          format="webp"
          alt={title}
          class="max-w-full md:max-w-[13rem] rounded-lg"
        />
      ) : (
        icon && <i class={`${icon} text-9xl text-primary`} class="hero-content flex-col md:flex-row" aria-hidden="true"></i>
      )}
      <div class="grow w-full">
        <h1 class="text-xl font-bold">
          {title}
          {badge && <div class="badge badge-secondary mx-2">{badge}</div>}
        </h1>
        <p class="py-1 text-1xl">{desc}</p>
        <div class="card-actions justify-end">
          {
            tags &&
              tags.map((tag) => (
                <div class="badge badge-outline">
                  {tag}
                </div>
              ))
          }
        </div>
      </div>
    </div>
  </a>
</div>
